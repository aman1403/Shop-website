<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
{{# each products }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                {{# if this.qty}}
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left">Rs.{{ this.price }}/kg</div>
                            <a href="/add-to-cart/{{this._id}}"; class="btn btn-success pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                     {{else}}
                     <div class="row">
                      <div class="col-sm-6 col-md-9">
                        <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                       <div class="clearfix"> <p class="description">{{ this.description }}</p>
                            <h4>Out Of Stock</h4>
                        </div>    
                        </div>   
                </div>
                </div>
                </div>
                  {{/if}}
                </div>
                </div>
            {{/each}} 
    </div>
{{/each}}
